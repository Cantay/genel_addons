<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']//span[last()]" position="inside">
                <span class="d-inline-block">
                    <field name="combo_product_ok"/>
                    <label for="combo_product_ok"/>
                </span>
            </xpath>
            <xpath expr="//page[@name='sales']/group[last()]" position="after">
                <group string="Combo Package" attrs="{'invisible': [('combo_product_ok', '!=', True)]}">
                    <field name="combo_item_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="product_id" required="1"/>
                            <field name="quantity" required="1"/>
                            <field name="remarks" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
