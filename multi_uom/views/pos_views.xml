<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_pos_order_form_inherit" model="ir.ui.view">
        <field name="name">pos.order.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lines']//tree//field[@name='product_uom_id']" position="after">
                <field name="pos_uom_qty"/>
                <field name="multi_uom_line_id" string="UoM"/>
            </xpath>
            <xpath expr="//field[@name='lines']//tree//field[@name='product_uom_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='lines']//tree//field[@name='qty']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>