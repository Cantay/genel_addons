<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--tree view of the model-->
    <record id="jewellery_tree" model="ir.ui.view">
        <field name="name">jewellery.profile.tree</field>
        <field name="model">jewellery.profile</field>
        <field name="arch" type="xml">
            <tree string="Jewellery">
                <field name="name" string="Müşteri Adı"/>
                <field name="certificate_date" string="Sertifika Tarihi"/>
                <field name="carat" string="Karat"/>
                <field name="jewellery_name" invisible="1" />
                <field name="jewellery_degree" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="jewellery_graph">
        <field name="name">jewellery.profile.graph</field>
        <field name="model">jewellery.profile</field>
        <field name="arch" type="xml">
            <graph string="Jewellery">
                <field name="name"/>
                <field name="jewellery_degree" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="jewellery_form_view" model="ir.ui.view">
        <field name="name">jewellery.form.view</field>
        <field name="model">jewellery.profile</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="jewellery_name" />
                        <field name="jewellery_degree" />
                        <field name="shape" />
                        <field name="carat" />
                        <field name="fluorescence" />
                        <field name="colour_grade" />
                        <field name="clarity_grade" />
                        <field name="cut" />
                        <field name="colour_grading_scale" />
                        <field name="clarity_grading_scale" />
                    </group>
                    <group>
                        <field name="name" />
                        <field name="certificate_date" />
                        <!-- <field name="estalish_date" />
                        <field name="open_date"/>
                        <field name="jewellery_type" /> -->

                    </group>
                </group>
                <group>
                    <field name="documents" filename="document_name" />
                    <field name="document_name" invisible="1"/>
                    <field name="jewellery_image" widget="image"/>
                    <field name="jewellery_description" string="jewellery Description"/>
                </group>
                <group>
                </group>
            </form>
        </field>
    </record>

    <record id="jewellery_kanban" model="ir.ui.view">
        <field name="name">jewellery.profile.kanban</field>
        <field name="model">jewellery.profile</field>
        <field name="arch" type="xml">
            <kanban default_group_by="name">
                <field name="id"/>
                <field name="jewellery_image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hospital_patient_kanban">
                            <t t-if="record.jewellery_image.raw_value">
                                <div class="o_kanban_image_fill_left d-none d-md-block"
                                     t-attf-style="background-image:url('#{kanban_image('jewellery.profile', 'jewellery_image', record.id.raw_value)}')"/>
                            </t>
                            <t t-else="">
                                <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/base/static/img/avatar.png"'/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>Age : <field name="name"/></li>
                                    <li>Doctor : <field name="name"/></li>
                                    <li>Email : <field name="name"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                    <searchpanel>
                        <field name="name" icon="fa-building"/>
                        <field name="name" select="multi" icon="fa-tags"/>
                    </searchpanel>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_jewellery_profile" model="ir.actions.act_window">
        <field name="name">Sertifika Oluştur</field>
        <field name="res_model">jewellery.profile</field>
        <field name="view_mode">tree,kanban,form,graph</field>
    </record>

    <menuitem id="jewellery_root_menu" name="Sertifikasyon" />
    <menuitem id="jewellery_sub_menu" parent="jewellery_root_menu" name="Olympia Jewellery"/>
    <menuitem id="jewellery_profile_menu" name="jewellery" action="action_jewellery_profile" parent="jewellery_sub_menu"/>

</odoo>